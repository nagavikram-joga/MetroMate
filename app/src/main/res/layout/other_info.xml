<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_fare_and_rout_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/_bg__home_ek2_shape"
        tools:ignore="RtlHardcoded,UselessParent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >
            <Button
                android:id="@+id/back_btn16"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/baseline_arrow_back_24"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck,VisualLintOverlap,TouchTargetSizeCheck" />

            <TextView
                android:text="Other info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:id="@+id/otherInfoText"
                android:gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="33dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/destination_station_shape">

            <Button
                android:id="@+id/offers"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/show_route_and_fare_button"
                android:elevation="10dp"
                android:radius="30dp"
                android:layout_weight="1"
                android:layout_marginTop="40dp"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="Offers" />
            <Button
                android:id="@+id/helpline"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/show_route_and_fare_button"
                android:elevation="10dp"
                android:radius="30dp"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="Help Line" />
            <Button
                android:id="@+id/offlwebsite"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/show_route_and_fare_button"
                android:elevation="10dp"
                android:radius="30dp"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="Official Website" />
            <Button
                android:id="@+id/tokens"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/show_route_and_fare_button"
                android:elevation="10dp"
                android:radius="30dp"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="Tokens &amp; SmartCards" />
            <Button
                android:id="@+id/feedback"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/show_route_and_fare_button"
                android:elevation="10dp"
                android:radius="30dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="Feedback" />
            <Button
                android:id="@+id/developers"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@drawable/show_route_and_fare_button"
                android:elevation="10dp"
                android:radius="30dp"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="About Developers" />



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>